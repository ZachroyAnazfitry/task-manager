# Docker Compose & backend environment (copy to .env and adjust for production)
# Run: cp .env.example .env  then  docker compose up --build

# MySQL (used by mysql service and backend)
MYSQL_ROOT_PASSWORD=secret
MYSQL_DATABASE=task_management
MYSQL_USER=laravel
MYSQL_PASSWORD=secret

# Laravel / backend (APP_KEY and JWT_SECRET are set automatically on first run if empty)
APP_KEY=
APP_ENV=local
APP_DEBUG=true
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=task_management
DB_USERNAME=laravel
DB_PASSWORD=secret
JWT_SECRET=your-jwt-secret-change-in-production
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
